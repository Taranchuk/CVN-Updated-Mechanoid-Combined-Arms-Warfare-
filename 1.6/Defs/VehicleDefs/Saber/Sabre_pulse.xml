<Defs>
	<ThingDef ParentName="BaseBullet">
		<defName>CVN_sabreround</defName>
		<label>low energy bolt</label>
		
		<graphicData>
			<texPath>Things/projectiles/BlueEnergy_Shot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>200</damageAmountBase>
      			<armorPenetrationBase>3.0</armorPenetrationBase>
			<speed>60</speed>
			<soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
		</projectile>
		<modExtensions>
			<li Class="taranchuk_flightcombat.ProjectileModes">
				<antiAir>false</antiAir>
				<ground>true</ground>
			</li>
