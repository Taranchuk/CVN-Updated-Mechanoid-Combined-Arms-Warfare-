    <graphicData>
      <drawSize>(1,1)</drawSize>
	<texPath>Things/Vehicles/Mechtek/justafuckingsquare</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
